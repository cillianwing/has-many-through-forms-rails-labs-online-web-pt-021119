<h1>Title: <%= @post.title %></h1>

<h3><%= @post.content %></h3>

<% @post.comments.each do |comment| %>
  <p>
    <%= comment.content %> by <%= User.find(comment.user_id).username %>
  </p>
<% end %>

<ul>
  <% @users.each do |user| %>
    <li><%= link_to user, user_path(User.find_by(username: user)) %></li>
  <% end %>
</ul>

New Comment:<br /><br />

<%= form_for :comments do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %><br />
  <%= f.label "User: " %>
  <%= f.collection_select :user_id, User.all, :id, :username %>  or enter new user below:<br /><br />
  <%= f.fields_for :user_attributes, @post.users.build do |user_fields| %>
    <%= user_fields.label :username %>
    <%= user_fields.text_field :username %>
    <%= user_fields.label :email %>
    <%= user_fields.text_field :email %>
  <% end %><br /><br />

  <%= f.submit %>

<% end %>
