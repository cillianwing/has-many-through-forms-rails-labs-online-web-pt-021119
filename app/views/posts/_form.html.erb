<%= form_for post do |f| %>

  <%= f.label "Title:" %>
  <%= f.text_field :title %><br />

  <%= f.label "Content:" %>
  <%= f.text_field :content %><br />

  Category:
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {include_blank: true} %><br />
  <%= f.fields_for :categories, post.categories.build do |cat_fields| %>
    <%= cat_fields.label "Or enter new category name:" %>
    <%= cat_fields.text_field :name %>
  <% end %>
  <br /><br />

  <%= f.submit %>

<% end %>
